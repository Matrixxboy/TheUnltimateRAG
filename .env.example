# ==========================================
# TheUltimateRAG Configuration Template
# Rename this file to .env and fill in values
# ==========================================

# --- APP SETTINGS ---
APP_NAME="TheUltimateRAG"
APP_ENV=development
DEBUG=True

# --- AI PROVIDERS ---
# Options: openai, ollama, anthropic
LLM_PROVIDER=openai
# Options: openai, ollama, huggingface
EMBEDDING_PROVIDER=openai

# Model to use (e.g., gpt-3.5-turbo, gpt-4, llama3, mistral)
MODEL_NAME=gpt-3.5-turbo

# --- API KEYS ---
# Required if LLM_PROVIDER or EMBEDDING_PROVIDER is 'openai'
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxx

# Required if LLM_PROVIDER is 'anthropic'
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxx

# --- OLLAMA (LOCAL AI) ---
# Only used if provider is 'ollama'
OLLAMA_BASE_URL=http://localhost:11434

# --- VECTOR DATABASE ---
# Options: chroma (easiest, local file), postgres (requires PGVector)
VECTOR_DB_TYPE=chroma

# Path for ChromaDB storage (local folder)
VECTOR_DB_PATH=./chroma_db_data

# --- POSTGRESQL (PGVector) ---
# Only used if VECTOR_DB_TYPE=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vector_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# --- MEMORY & REDIS ---
# Number of messages to keep in context
MEMORY_WINDOW_SIZE=10

# Redis Connection (Used for short-term caching/memory)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
# REDIS_USER=default